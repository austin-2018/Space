@model IEnumerable<LearningHub.Models.Course_ContentItem>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-6">@item.ContentItem.NameAndType</div>
        <div class="col-md-6">
            @Ajax.ActionLink("Remove", "RemoveContentItem",
                routeValues: new { id = item.Id },
                ajaxOptions: new AjaxOptions { HttpMethod = "DELETE", InsertionMode = InsertionMode.Replace, UpdateTargetId = "contentItemList" },
                htmlAttributes: new { @class = "removeLink" })
    </div>
</div>
}

<script type="text/javascript">
    $(function () {
        $(".removeLink").html("<span class='glyphicon glyphicon-remove'></span> Remove");
    });
</script>