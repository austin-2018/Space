@model SolidMvcSharePoint.Models.CourseTemplate

<div class="row">
    <div class="col-md-6">
        <h3>@Model.Title</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Description</div>
            <div class="panel-body">@Model.Description</div>
        </div>
    </div>

    <div class="col-md-6">
        <h3>Content Items</h3>
        <ul>
            @foreach (var item in Model.ContentItems)
            {
                <li>@item.Name</li>
            }
        </ul>
    </div>
</div>
