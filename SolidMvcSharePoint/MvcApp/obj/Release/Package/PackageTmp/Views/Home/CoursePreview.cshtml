@model LearningHub.Models.Course

<div class="panel panel-default">
    <div class="panel-body">
        <div class="panel panel-warning">
            <div class="panel-heading transdev-course-heading">Description</div>
            <div class="panel-body">@Html.Raw(Model.Description)</div>
        </div>

        <div class="panel panel-warning">
            <div class="panel-heading transdev-course-heading">Objectives</div>
            <div class="panel-body">@Html.Raw(Model.Objectives)</div>
        </div>

        @if (Model.ContentItems != null)
        {
            foreach (var item in Model.ContentItems)
            {
                @Html.Action("ContentItem", new { url = item.ServerRelativeUrl });
            }
        }
    </div>
</div>